<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_133"
        android:background="@drawable/shape_parking_lot_top_bg" />

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_comment_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_toolbar"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_13"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_13">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_assistantViolationReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_assistant_violation_report_bg"
            android:drawableStart="@mipmap/ic_assistant_violation_report_logo"
            android:drawableEnd="@mipmap/ic_assistant_violation_report_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_13"
            android:text="@string/协管员违规上报"
            android:textColor="@color/color_ff1a1a1a"
            android:textSize="@dimen/sp_19" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_assistantViolationHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@mipmap/ic_assistant_violation_history_bg"
            android:drawableStart="@mipmap/ic_assistant_violation_history_logo"
            android:drawableEnd="@mipmap/ic_assistant_violation_history_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_13"
            android:text="@string/协管员违规史"
            android:textColor="@color/color_ff1a1a1a"
            android:textSize="@dimen/sp_19" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enterpriseViolationReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@mipmap/ic_enterprise_violation_report_bg"
            android:drawableStart="@mipmap/ic_enterprise_violation_report_logo"
            android:drawableEnd="@mipmap/ic_enterprise_violation_report_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_13"
            android:text="@string/企业违规上报"
            android:textColor="@color/color_ff1a1a1a"
            android:textSize="@dimen/sp_19" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enterpriseViolationHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@mipmap/ic_enterprise_violation_history_bg"
            android:drawableStart="@mipmap/ic_enterprise_violation_history_logo"
            android:drawableEnd="@mipmap/ic_enterprise_violation_history_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_13"
            android:text="@string/企业违规历史"
            android:textColor="@color/color_ff1a1a1a"
            android:textSize="@dimen/sp_19" />
    </LinearLayout>
</RelativeLayout>