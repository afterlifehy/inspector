<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_violation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_violation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_toStartOf="@+id/cb_violation"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_ff1a1a1a"
        android:textSize="@dimen/sp_19"
        tools:text="定西路(愚园路～安化路)西侧定西路(愚园路～安化路)西侧定西路(愚园路～安化路)西侧" />

    <CheckBox
        android:id="@+id/cb_violation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:button="@drawable/selector_violation_box" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffd9d9d9" />
</RelativeLayout>